<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chatbot.web.mappers.ChatHistoryMapper">
    <insert id="insertHistory" parameterType="com.chatbot.web.domains.ChatHistory">
        insert into chathistory (user_info, chat_body, insert_date)
        values (#{userInfo}, #{chatBody}, now())
    </insert>

    <update id="updateHistory" parameterType="com.chatbot.web.domains.ChatHistory">
        update chathistory set
        user_info = #{userInfo},
        chat_body = #{chatBody},
        updat_date = #{updateDate}
    </update>

    <delete id="deleteHistory" parameterType="com.chatbot.web.domains.ChatHistory">
        delete from chathistory where chatBody = #{chatBody};
    </delete>
</mapper>