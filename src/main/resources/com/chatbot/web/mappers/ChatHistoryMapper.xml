<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chatbot.web.mappers.ChatHistoryMapper">
    <insert id="insertData" parameterType="chatHistory">
        <selectKey resultType="int" keyProperty="id" order="AFTER">
            select last_insert_id()
        </selectKey>
        insert into chathistory (user_info, chat_body, insert_date)
        values (#{userInfo}, #{chatBody}, now())
    </insert>

    <update id="updateData" parameterType="chatHistory">
        update chathistory set
        user_info = #{userInfo},
        chat_body = #{chatBody},
        updat_date = #{updateDate}
    </update>

    <delete id="deleteData" parameterType="chatHistory">
        delete from chathistory where chatBody = #{chatBody};
    </delete>
</mapper>